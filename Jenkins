pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                git 'https://github.com/pujarpavan/Automation' // Replace with your Git repository
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install TestCafe and other dependencies
                sh 'npm install'
            }
        }
        stage('Check Node Version') {
            steps {
                // Check the versions of Node.js and npm
                sh 'node -v'
                sh 'npm -v'
            }
        }
        stage('Run Tests') {
            steps {
                // Run your TestCafe tests
                sh 'npx testcafe chrome tests/example.test.js'
            }
        }
    }

    post {
        always {
            // Archive test results or screenshots, if any
            archiveArtifacts artifacts: 'screenshots/**/*', allowEmptyArchive: true
        }
    }
}
