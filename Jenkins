pipeline {
    agent {
        label 'your-vm-label' // Replace with your VM label
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout your repository
                git 'https://github.com/pujarpavan/Automation.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install TestCafe and other dependencies
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                // Run your TestCafe tests
                sh 'npx testcafe chrome test/example.test.js'
            }
        }
    }
    post {
        always {
            // Clean up the workspace
            cleanWs()
        }
        success {
            echo 'Tests completed successfully.'
        }
        failure {
            echo 'Tests failed.'
        }
    }
}
